                </ul>
            </div>

        </div>

        <div class="col-md-9 faq-niceloop">
           
            @* For template *@
          @*     <p class="question">qqqqqqqqqqqq</p>
                <p class="answer">aaaaaaaaa</p>*@

               
            @Html.Partial("Faq-Partial/GeneralQuestion")
                
                @Html.Partial("Faq-Partial/TechnicalQuestion")
                
                @Html.Partial("Faq-Partial/PackageQuestion")
               
               @Html.Partial("Faq-Partial/PaymentQuestion")
                 
             @Html.Partial("Faq-Partial/Hardware")

            @Html.Partial("Faq-Partial/Security")
           
            
            

      




        </div>
    </div>
</div>


@section scripts{

    <script>

        $(document).ready(function () {

            //set active tab
            //var activeTab = 5;
            //$('#mainMenu li:eq(' + activeTab + ')').addClass('active');


            // set icons
            $('p.question').prepend('<i class="icon icon-question"></i> ');
            $('p.answer').prepend('<i class="icon icon-comment-o"></i> ');

            $('span.myFaq').popover();
            // $('#affix').affix();
        });


        // Simple jQuery scroll to anchor up or down the page
        $('#question-nav li a').click(function () {
            $('html, body').animate({
                scrollTop: $($(this).attr('href')).offset().top - 100
            }, 'slow');
            return false;
        });



    </script>

  

}